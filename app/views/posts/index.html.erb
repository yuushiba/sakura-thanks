<div class="min-h-screen bg-base-100">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">みんなの投稿一覧</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <p class="text-center col-span-3">投稿がありません</p>
      <% end %>
    </div>
  </div>
</div>
