<div class="min-h-screen bg-base-100">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-center mb-8" style="color: #073472;">投稿詳細</h1>
    
    <div class="max-w-4xl mx-auto space-y-4">
      <%# 画像部分 %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <% if @post.image.attached? %>
          <%= image_tag @post.image, class: "w-full" %>
        <% else %>
          <%= image_tag "Cropped_Image copy.png", class: "w-full" %>
        <% end %>
      </div>

      <%# コンテンツ部分 %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
          <%# タイトルとボタンを同じ行に配置 %>
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold" style="color: #000000;">
              <%= @post.title %>
            </h2>
            
            <% if current_user&.id == @post.user_id %>
              <div class="flex items-center gap-4"> <!-- gap-2 から gap-4 に変更 -->
                <%= link_to edit_post_path(@post), 
                    class: "btn custom-text border-none hover:opacity-80", 
                    style: "background-color: #DD7594;" do %>
                  編集する
                <% end %>
                
                <%= button_to '削除する', post_path(@post), 
                    method: :delete, 
                    class: 'btn custom-text border-none hover:opacity-80',
                    style: "background-color: #D9D9D9;",
                    data: { turbo_confirm: '投稿を削除してもよろしいですか？' } %>
              </div>
            <% end %>
          </div>
          
          <p class="mb-4" style="color: #000000;">
            <%= @post.content %>
          </p>
          
          <div class="flex justify-between items-center">
            <p class="text-sm" style="color: #000000;">
              投稿者: <%= @post.user.name %>
            </p>
          </div>
        </div>
      </div>
      <%# コメントフォーム %>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4" style="color: #073472;">コメントを投稿する</h3>
        <%= render 'comments/form', post: @post, comment: @comment %>
      </div>

      <%# コメント一覧 %>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4" style="color: #073472;">コメント一覧</h3>
        <div class="space-y-4">
          <%= render @comments %>
        </div>
      </div>

      <%# 戻るボタン %>
      <div class="text-center mt-8">
        <%= link_to "戻る", :back, 
            class: "btn btn-neutral" %>
      </div>
    </div>
  </div>
</div>
