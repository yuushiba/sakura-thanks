<%# app/views/posts/_post.html.erb %>
<div class="h-full flex flex-col">
  <div class="card h-full shadow-lg" style="background-color: #FFFFFF; border: 1px solid #D1D5DB;" id="post-<%= post.id %>">
    <div class="card-body flex flex-row gap-4">
      <%# 画像 %>
      <div class="w-1/4 aspect-square">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: "w-full h-full object-cover rounded-lg" %>
        <% else %>
          <%= image_tag "Cropped_Image copy.png", class: "w-full h-full object-cover rounded-lg" %>
        <% end %>
      </div>

      <%# コンテンツ %>
      <div class="flex-1">
        <%# タイトル %>
        <h2 class="card-title mb-2" style="color: #000000;">
          <%= post.title %>
        </h2>
        
        <%# 投稿者名 %>
        <span class="text-sm mb-4" style="color: #000000;">
          <%= post.user.name %>
        </span>
        
        <%# 本文 %>
        <p class="flex-grow" style="color: #000000;">
          <%= truncate(post.content, length: 100) %>
        </p>
      </div>
    </div>
  </div>
</div>
